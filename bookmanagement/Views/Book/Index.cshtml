@model List<bookmanagement.Models.Book>
@{
    ViewBag.Title = "Index";
}
@{
    bookmanagement.Models.BookManagementDbContext db = new bookmanagement.Models.BookManagementDbContext();
}
<body style="background-image: url('/Content/images/pexels-pixabay-159866.jpg');">

    <h2>Welcome admin,</h2>


    <main>
        <h2>All Books are here</h2>
        <a href="@Url.Action("Create")" class="btn btn-success mb-3 mt-2">Add Books</a>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Book Name</th>

                    <th>Author Name</th>

                    <th>ISBN</th>
                    <th>Publication Date</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookName</td>

                        <td>@item.Author.AuthorName</td>
                        <td>@item.ISBN</td>
                        <td>@item.PublicationDate</td>
                        <td>@item.Price</td>
                        <td>@item.img</td>


                        <td>
                            <a href="@Url.Action("Edit", new {id = item.BookId})" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Delete", new {id = item.BookId})" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

    </body>