@model List<bookmanagement.Models.Book>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@{
    bookmanagement.Models.BookManagementDbContext db = new bookmanagement.Models.BookManagementDbContext();
}*@


     

    @* book card*@

<div class="row">
    @foreach (var i in Model)
    {
        <!DOCTYPE html>

        <html>
        <head>
            <meta name="viewport" content="width=device-width" />
            <title>baseview</title>
            <style>
                .card {
                    height: 100%;
                }

                .card-img-top {
                    width: 100%;
                    height: 15vw;
                    object-fit: cover;
                }
            </style>
        </head>
        <body>
            <div class="col-md-4 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <img src="~/Content/images/@i.img" class="card-img-top" alt="book cart">
                            <div class="card-body">
                                <h5 class="card-title">@i.BookName</h5>
                                <p class="card-text">Author : @i.Author.AuthorName</p>
                                <p class="card-text">Genre :@i.Genre.GenreName</p>
                                <p class="card-text">Price: @i.Price</p>
                                <a href="@Url.Action("AddToCart", "Cart", new { @id = i.BookId })" class="btn btn-primary">Add to Cart</a>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </body>
    </html>
}
</div>
